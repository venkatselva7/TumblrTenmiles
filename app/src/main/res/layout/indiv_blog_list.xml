<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="true"
    android:layout_margin="@dimen/margin_medium"
    card_view:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:paddingBottom="10dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/im_blog_avatar"
            android:layout_width="@dimen/imageview_width"
            android:layout_height="@dimen/imageview_height"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="@dimen/margin_medium"
            android:contentDescription="@string/avatar" />

        <TextView
            android:id="@+id/tv_blog_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textColor="@color/blogName"
            android:layout_toRightOf="@id/im_blog_avatar"
            android:text="Name"
            android:textSize="@dimen/semi_largex" />

        <TextView
            android:id="@+id/tv_blog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/blogTitle"
            android:layout_below="@id/tv_blog_name"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_toRightOf="@id/im_blog_avatar"
            android:text="Title"
            android:textSize="@dimen/medium" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
